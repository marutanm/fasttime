%head
  = stylesheet_link_tag 'bootstrap', 'bootstrap-responsive', 'flat-ui'
  = javascript_include_tag 'jquery-1.8.3.min', 'bootstrap.min', 'application'
%body
  .navbar
    .navbar-inner
      .container
        .brand FastTime
        %ul.nav.pull-right
          - if env['warden'].authenticated?
            %li= link_to @current_user.name
          - else
            %li= link_to 'login', :login
  .container
    .row
      .span4
      .span4
        = button_tag "I'm here", |
          :class => 'btn btn-large btn-block btn-primary', |
          :id => 'stamp'
      .span4
    .row
      = yield
